<section style="min-height: 51vh">
  <div class="container">
    <div class="my-4">
      <h2 class="md:text-2xl lg:text-3xl">All articles</h2>
    </div>
    <ul class="mt-5">
  	  <% ArticleModel.all.each do |article| %>
  	    <li class="my-2 drop-shadow-md text-xl">
          <%= link_to article.title, article.request_path, class: "no-underline hover:underline text-indigo-600" %>    
        </li>
  	   <% end %>
    </ul>
  </div>
</section>
